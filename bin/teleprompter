#!/usr/bin/env node
'use strict';

var fs = require('fs');
var path = require('path');
var minimist = require('minimist');
var createLoader = require('../lib/loader');
var createServer = require('../lib/server');
var argv = minimist(process.argv.slice(2), {
  boolean: ['help'],
  alias: {
    help: 'h',
    port: 'p'
  },
  default: {
    port: 8080
  }
});

if (argv._.length !== 1) {
  process.stdout.write('Error: Missing scripts argument.\n\n');
  help(1);
} else if (!fs.statSync(path.resolve(process.cwd(), argv._[0])).isDirectory()) {
  process.stdout.write('Error: Scripts argument is not a directory.\n\n')
  help(2);
}

if (argv.help) {
  help();
}

function help(code) {
  process.stdout.write(fs.readFileSync(path.join(__dirname, 'usage'), 'utf8'));
  process.exit(code || 0);
}

createServer(createLoader(argv._[0]))
  .on('listening', function () {
    process.stdout.write('Listening on port ' + argv.port + '...');
  })
  .listen(argv.port);
